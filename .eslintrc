{
  "extends": ["wesbos"],
  "rules": {
    "react/prop-types": 0,
    "react/destructuring-assignment": 0,
    "react/jsx-no-bind": [
      0,
      {
        "ignoreDOMComponents": true,
        "ignoreRefs": true,
        "allowArrowFunctions": true,
        "allowFunctions": true,
        "allowBind": true
      }
    ]
  }
}
